<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/coffee_with_sugar</item>
        <item name="background">@drawable/bg</item>
    </style>

    <style name="BottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/coffee_with_sugar</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>